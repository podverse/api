{
  "name": "podverse-api",
  "version": "5.0.3",
  "description": "Data API, database migration scripts, and backend services for all Podverse models.",
  "private": true,
  "main": "./src/index.js",
  "repository": "https://github.com/podverse/podverse-api.git",
  "homepage": "https://github.com/podverse/podverse-api#readme",
  "author": "Mitch Downey <mitchldowney@gmail.com>",
  "contributors": [
    "Mitch Downey"
  ],
  "scripts": {
    "build": "tsc",
    "dev": "ts-node ./src/index.ts",
    "dev:watch": "tsc --watch & nodemon --watch 'src' --watch $(realpath node_modules/podverse-helpers) --watch $(realpath node_modules/podverse-orm) --watch 'dist' dist/index.js",
    "lint": "eslint 'src/**/*.{ts,js}'",
    "prepublishOnly": "npm run build",
    "start": "ts-node ./dist/index.js"
  },
  "license": "AGPLv3",
  "keywords": [
    "podcast",
    "episode",
    "RSS",
    "Atom",
    "feed",
    "parser",
    "feedparser",
    "database",
    "db",
    "podverse"
  ],
  "dependencies": {
    "@dotenvx/dotenvx": "^1.6.4",
    "body-parser": "^1.20.2",
    "cookie-parser": "^1.4.7",
    "express": "^4.19.2",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "module-alias": "^2.2.3",
    "passport": "^0.7.0",
    "passport-jwt": "^4.0.1",
    "passport-local": "^1.0.0",
    "podverse-helpers": "^5.0.4",
    "podverse-orm": "^5.0.3",
    "reflect-metadata": "^0.2.2"
  },
  "devDependencies": {
    "@eslint/config-array": "^0.18.0",
    "@eslint/eslintrc": "^3.1.0",
    "@eslint/js": "^9.8.0",
    "@types/cookie-parser": "^1.4.8",
    "@types/express": "^4.17.21",
    "@types/node": "^22.1.0",
    "@types/passport": "^1.0.17",
    "@types/passport-jwt": "^4.0.1",
    "@types/passport-local": "^1.0.38",
    "eslint": "^9.9.0",
    "globals": "^15.9.0",
    "nodemon": "^3.1.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4",
    "typescript-eslint": "^8.0.1"
  }
}
